<h1>Editing image</h1>

<%= form_for(@user) do |f| %>
<%= f.label :title %><
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= image_tag @user.avatar.url(:thumb) if @user.avatar_present?%>

<%= f.label :image_url %>
<%= f.file_field :avatar %>

<%= f.submit %>
<% end %>
